{
  "name": "@nanostores/router",
  "version": "0.8.0",
  "description": "A tiny (835 bytes) router for Nano Stores state manager",
  "keywords": [
    "nano",
    "router",
    "react",
    "preact",
    "vue",
    "svelte",
    "store"
  ],
  "scripts": {
    "unit": "tsm ./test/search.test.ts && tsm ./test/router.test.ts && tsm ./test/ssr.test.ts",
    "test": "c8 pnpm unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/router",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^14.0.0 || ^16.0.0 || >=18.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.7.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^48.0.0",
    "@size-limit/preset-small-lib": "^8.1.2",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "c8": "^7.12.0",
    "check-dts": "^0.7.0",
    "clean-publish": "^4.1.1",
    "eslint": "^8.33.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jsdom": "^21.1.0",
    "nanostores": "^0.7.3",
    "size-limit": "^8.1.2",
    "tsm": "^2.3.0",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "reporter": "lcov",
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "consistent-return": "off"
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "Router",
      "import": {
        "./index.js": "{ createRouter }"
      },
      "limit": "835 B"
    },
    {
      "name": "Search Params",
      "import": {
        "./index.js": "{ createSearchParams }"
      },
      "limit": "526 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
