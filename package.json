{
  "name": "@nanostores/router",
  "version": "0.2.0",
  "description": "A tiny (751 bytes) router for Nano Stores state manager",
  "keywords": [
    "nano",
    "router",
    "react",
    "preact",
    "vue",
    "svelte",
    "store"
  ],
  "scripts": {
    "unit": "tsm ./test/index.test.ts && tsm ./test/ssr.test.ts",
    "test": "c8 yarn unit && eslint . && check-dts && size-limit"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "nanostores/router",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "peerDependencies": {
    "nanostores": "^0.5.0"
  },
  "devDependencies": {
    "@logux/core": "^0.7.2",
    "@logux/eslint-config": "^46.1.0",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "c8": "^7.10.0",
    "check-dts": "^0.6.3",
    "clean-publish": "^3.4.2",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "jsdom": "^18.0.1",
    "nanostores": "^0.5.4",
    "size-limit": "^6.0.4",
    "tsm": "^2.1.4",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 100,
    "check-coverage": true
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "camelcase": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "import": {
        "./index.js": "{ createRouter }"
      },
      "limit": "751 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
